@model ECommerce.MvcWebUI.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<style>

    .field-validation-error {
        color: #f00;
    }
    .field-validation-valid{display:none;}
    .input-validation-error {
        border:1px solid #f00;
        background-color:#fee;
    }
    .validation-summmary-errors{font-weight:bold; color:#f00;}
    .validation-summmary-valid{display:none}


</style>
<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h2>Order Information</h2>
            <p>Please enter your order information.</p>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group row">
                    <label for="FullName" class="col-sm-2 col-form-label">Username :</label>
                    <div class="col-sm-6">
                        <span class="badge badge-warning">@User.Identity.Name</span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FullName" class="col-sm-2 col-form-label">Address Title :</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.AddressTitle, new { @class = "form-control", placeholder = "Address Title" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FullName" class="col-sm-2 col-form-label">Address :</label>
                    <div class="col-sm-6">
                        @Html.TextAreaFor(i => i.Address, new { @class = "form-control", placeholder = "Address" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FullName" class="col-sm-2 col-form-label">City :</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.City, new { @class = "form-control", placeholder = "City" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FullName" class="col-sm-2 col-form-label">Town :</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.Town, new { @class = "form-control", placeholder = "Town" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FullName" class="col-sm-2 col-form-label">District :</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.District, new { @class = "form-control", placeholder = "District" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FullName" class="col-sm-2 col-form-label">Post Code :</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.PostCode, new { @class = "form-control", placeholder = "Post Code" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FullName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>