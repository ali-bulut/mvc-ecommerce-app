@using  ECommerce.MvcWebUI.Entity
@model ECommerce.MvcWebUI.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h2>Order Details</h2>
            <hr />

            @if (TempData["message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["message"]
                </div>
            }

                <dl class="row">

                    <dt class="col-sm-3">Username</dt>
                    <dd class="col-sm-9">@Model.Username</dd>

                    <dt class="col-sm-3">Order Status</dt>
                    <dd class="col-sm-9">
                        @using (Html.BeginForm("UpdateOrderStatus", "Order", FormMethod.Post))
                        {
                            @Html.HiddenFor(i => i.OrderId)
                            <dl class="row">
                                <dt class="col-sm-8">@Html.EnumDropDownListFor(i => i.OrderState, new { @class = "form-control" })</dt>
                                <dd class="col-sm-4">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </dd>
                            </dl>

                        }

                    </dd>

                    <dt class="col-sm-3">Order Id</dt>
                    <dd class="col-sm-9">@Model.OrderId</dd>

                    <dt class="col-sm-3">Order Number</dt>
                    <dd class="col-sm-9">@Model.OrderNumber</dd>

                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9">
                        @Model.Total
                        <i class="fa fa-try" aria-hidden="true"></i>
                    </dd>

                    <dt class="col-sm-3">Order Date</dt>
                    <dd class="col-sm-9">@Model.OrderDate</dd>

                    <dt class="col-sm-3">Order Id</dt>
                    <dd class="col-sm-9">@Model.OrderId</dd>


                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">
                        @Model.AddressTitle
                        <hr />
                        @Model.Address
                        <br />
                        @Model.City - @Model.Town - @Model.District
                        <br />
                        @Model.PostCode
                    </dd>

                    <dt class="col-sm-3">Products</dt>
                    <dd class="col-sm-9">

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th style="width:19%;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderLines)
                                {
                                    <tr>
                                        <td><img src="/Upload/@item.Image" width="70" /></td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>
                                            @item.Price
                                            <i class="fa fa-try" aria-hidden="true"></i>
                                        </td>
                                        <td>
                                            <a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                                <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                                Product Details
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </dd>

                </dl>
        </div>
    </div>
</div>

