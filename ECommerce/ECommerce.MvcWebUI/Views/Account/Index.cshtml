@model IEnumerable<ECommerce.MvcWebUI.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h2>Order Information</h2>
            <hr />

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>Order Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrdeDate.ToShortDateString()</td>
                            <td>
                                @item.Total
                                <i class="fa fa-try" aria-hidden="true"></i>
                            </td>
                            <td>@item.OrderState</td>
                            <td>
                                @Html.ActionLink("Details","Details",new { id=item.Id}, new { @class="btn btn-primary"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>